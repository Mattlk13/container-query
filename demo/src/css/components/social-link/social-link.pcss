@container (aspect-ratio > 2) {
    .social-link {
        font-size: 60chpx;
    }

    .social-link__icon {
        margin-left: 20chpx;
    }

    .social-link__name {
        display: block;
        margin-left: 5cwpx;
        margin-right: 20chpx;
    }
}
