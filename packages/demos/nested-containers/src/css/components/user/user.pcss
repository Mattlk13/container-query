.user {
    @define-container;

    display: flex;
    flex-direction: column;
    background: #ccc;
    overflow: hidden;
    border: 0.5rmax solid;
    border-radius: 3rmin;
    min-height: 200px;
    max-height: 300px;
    position: fixed;
    top: 50%;
    transform: translateY(-50%) translateZ(0);
    transition: width 1s;

    &__info {
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 1rmax;

        @container (width > 300px) {
            flex-direction: row;
        }
    }

    &__image {
        height: 30rw;
        max-height: 100px;
        border-radius: 100%;
    }

    &__name {
        flex: 1 0 0;
        padding-left: 5rw;
        display: none;

        @container (width > 200px) {
            display: block;
        }
    }

    &__social {
        flex: 1 0 0;
        position: relative;
    }

    &--1 {
        left: 10%;
        width: 20%;
        height: 30%;
    }

    &--2 {
        right: 10%;
        width: 40%;
        height: 50%;
    }
}
